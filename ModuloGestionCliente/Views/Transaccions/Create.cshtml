@model ModuloGestionCliente.Models.DB.Transaccion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Transacción</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Número de Cuenta Origen</label>
                <input name="CuentaOrigen" class="form-control" type="number" step="0.01" required />
            </div>

            <div class="form-group">
                <label class="control-label">Número de Cuenta Destino</label>
                <input name="CuentaDestino" class="form-control" type="number" step="0.01" required />
            </div>

            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" type="number" step="0.01" min="0.01" required />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
